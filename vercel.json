{
  "buildCommand": "npm run build",
  "installCommand": "npm install && npm run install:opencv",
  "outputDirectory": ".next",
  "framework": "nextjs",
  "env": {
    "NODE_ENV": "production",
    "OPENCV_INCLUDE_PATH": "/usr/include/opencv4",
    "OPENCV_LIB_PATH": "/usr/lib/x86_64-linux-gnu"
  },
  "build": {
    "env": {
      "DEBIAN_FRONTEND": "noninteractive"
    }
  },
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        }
      ]
    }
  ],
  "functions": {
    "app/api/images/extend-canvas/route.ts": {
      "maxDuration": 30
    }
  }
}
