{
  "extends": "next/core-web-vitals",
  "ignorePatterns": ["src/components/MDXEditor.tsx"],
  "rules": {
    "react/no-unescaped-entities": ["error", { "forbid": [">", "}"] }],
    "no-console": ["error", { "allow": ["warn", "error"] }],
    "no-debugger": "error"
  },
  "overrides": [
    {
      "files": ["*.ts", "*.tsx"],
      "rules": {
        "no-console": ["error", { "allow": [] }]
      }
    },
    {
      "files": [
        "src/scripts/**/*",
        "scripts/**/*",
        "*.config.js",
        "*.config.ts"
      ],
      "rules": {
        "no-console": "off"
      }
    }
  ]
}
